{% block content %}

{% if view == "FORM" %}
  <form name="checkin" action="checkinPallet.php" method="POST">
    <select name="recipeID">
      <option value=""></option>

      {% for recipe in recipes %}
      <option value="{{ recipe.id }}">{{ recipe.name }}</option>
      {% endfor %}

    </select>

    <input type="submit" value="Check In Pallet" />
  </form>

{% elseif view == "CHECKED_IN" %}
  <p class="alert alert-success">The pallet was successfully checked into the deep freezer.</p>

{% elseif view == "CHECKIN_FAILED" %}
  <p class="alert alert-error">The pallet could not be created because not enough materials exist.</p>

{% endif %}

{% endblock %}