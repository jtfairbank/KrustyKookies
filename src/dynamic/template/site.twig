{# Base Site Template
------------------------------------------------------------ #}
<!DOCTYPE html>

<html>
  <head>
  {% block head %}
    <meta charset="utf-8" lang="sv">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <title>{{ title }} | Krusty Kookies</title>
    
    {% block css %}
    <link href="lib/bootstrap-3.1.1-dist/css/bootstrap.min.css" rel="stylesheet" media="all" />
    <link href="static/css/main.css" rel="stylesheet" media="all" />
    {% endblock %}

    {% block js %}
    <script src="lib/jquery/jquery-2.1.0.min.js"></script>
    {% endblock %}
    
  {% endblock head %}
  </head>
  
  <body class="container">
    <header id="mainheader" class="text-center">
    {% block header %}
      <h1>Krusty Kookies</h1>
      {{ mainNav() }}      
    {% endblock header %}
    </header>
      
    <section id="content" class="row">
      <div class="col-md-offset-2 col-md-8">
        {% block content %}{% endblock %}
      </div>
    </section>     
  
    <footer id="mainfooter" class="text-center">
    {% block footer %}
      <p>J. Taylor Fairbank, Copyright &copy; 2014</p>
    {% endblock footer %}
    </footer>
  
  </body>
</html>
